{
  "version": "1",
  "pipeline": {
    "id": "shopgate.catalog.getFilters.v1",
    "public": true,
    "input": [
      { "key": "categoryId", "id": "1", "optional": true },
      { "key": "searchPhrase", "id": "2", "optional": true },
      { "key": "filters", "id": "3", "optional": true }
    ],
    "output": [{ "key": "filters", "id": "1000" }],
    "steps": [
      {
        "type": "conditional",
        "input": [
          { "id": "1", "key": "categoryId", "optional": true }
        ],
        "expression": { "notok": [{ "name": "categoryId" }] },
        "then": {
          "type": "extension",
          "id": "@shopgate-project/search-batteryincluded",
          "path": "@shopgate-project/search-batteryincluded/steps/getFilters.js",
          "input": [
            { "key": "searchPhrase", "id": "2", "optional": true },
            { "key": "filters", "id": "3", "optional": true }
          ],
          "output": [{ "id": "1000", "key": "filters" }]
        }
      },
      {
        "type": "extension",
        "id": "@shopgate-project/search-batteryincluded",
        "path": "@shopgate-project/search-batteryincluded/steps/getCatalogService.js",
        "input": [],
        "output": [{ "id": "5", "key": "catalogService" }]
      },
      {
        "type": "conditional",
        "input": [
          { "id": "1", "key": "categoryId", "optional": true },
          { "id": "5", "key": "catalogService" }
        ],
        "expression": {
          "all": [
            { "ok": [{ "name": "categoryId" }] },
            { "eq": [
                { "name": "catalogService", "type": "input" },
                { "type": "static", "value": "CATALOG_SERVICE_GENERIC" }
              ]
            }
          ]
        },
        "then": {
          "type": "extension",
          "id": "@shopgate/catalog",
          "path": "@shopgate/catalog/filters/getFilters.js",
          "input": [
            { "id": "1", "key": "categoryId", "optional": true },
            { "id": "2", "key": "searchPhrase",  "optional": true },
            { "id": "3", "key": "filters",  "optional": true  }
          ],
          "output": [{ "id": "1000", "key": "filters" }]
        }
      },
      {
        "type": "conditional",
        "input": [
          { "id": "1", "key": "categoryId", "optional": true },
          { "id": "5", "key": "catalogService" }
        ],
        "expression": {
          "all": [
            { "ok": [{ "name": "categoryId" }] },
            { "eq": [
                { "name": "catalogService", "type": "input" },
                { "type": "static", "value": "CATALOG_SERVICE_PRODUCTS" }
              ]
            }
          ]
        },
        "then": {
          "type":"extension",
          "id":"@shopgate/products",
          "path":"@shopgate/products/products/getFilters.js",
          "input":[
            { "id": "1", "key": "categoryId", "optional": true },
            { "id": "2", "key": "searchPhrase", "optional": true },
            { "id": "3", "key": "filters",  "optional": true }
          ],
          "output":[
            { "id": "10", "key": "service" },
            { "id": "11", "key": "version" },
            { "id": "12", "key": "path" },
            { "id": "13", "key": "method" },
            { "id": "14", "key": "query" }
          ]
        }
      },
      {
        "type": "conditional",
        "input": [
          { "key": "categoryId", "id": "1", "optional": true},
          { "id": "5", "key": "catalogService" }
        ],
        "expression": {
          "all": [
            { "ok": [{ "name": "categoryId" }] },
            { "eq": [
                { "name": "catalogService", "type": "input" },
                { "type": "static", "value": "CATALOG_SERVICE_PRODUCTS" }
              ]
            }
          ]
        },
        "then": {
          "id": "@shopgate/bigapi",
          "path": "@shopgate/bigapi/big-api/getBigApiResult.js",
          "type": "extension",
          "input": [
            { "id": "10", "key": "service" },
            { "id": "11", "key": "version" },
            { "id": "12", "key": "path" },
            { "id": "13", "key": "method" },
            { "id": "14", "key": "query" }
          ],
          "output": [
            { "id": "1000", "key": "filters" }
          ]
        }
      },
      {
        "type": "conditional",
        "input": [
          { "id": "1", "key": "categoryId", "optional": true },
          { "id": "5", "key": "catalogService" }
        ],
        "expression": {
          "all": [
            { "ok": [{ "name": "categoryId" }] },
            { "eq": [
                { "name": "catalogService", "type": "input" },
                { "type": "static", "value": "CATALOG_SERVICE_SHOPIFY" }
              ]
            }
          ]
        },
        "then": {
          "type": "extension",
          "id": "@shopgate/catalog-shopify",
          "path": "@shopgate/catalog-shopify/filters/getFiltersFromCatalogService.js",
          "input": [
            { "id": "1", "key": "categoryId", "optional": true },
            { "id": "2", "key": "searchPhrase", "optional": true },
            { "id": "3", "key": "filters", "optional": true }
          ],
          "output":[{ "id": "1000", "key": "filters" }]
        }
      }
    ]
  }
}
